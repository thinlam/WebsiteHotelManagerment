@model IEnumerable<WebsiteHotelManagerment.Models.NhanVien>
@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2 class="my-3">Danh sách nhân viên</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Thêm mới</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Chức vụ</th>
            <th>Ngày vào làm</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>@item.SoDienThoai</td>
                <td>@item.ChucVu</td>
                <td>@item.NgayVaoLam.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
