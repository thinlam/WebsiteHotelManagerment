@model List<WebsiteHotelManagerment.Models.CartItem>

<div class="px-60 mt-115" style="margin-top:180px;">
    <div class="text-center mb-5">
        <h2 class="fw-bold">🛒 Giỏ hàng của bạn</h2>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            Chưa có sản phẩm trong giỏ hàng.
        </div>
    }
    else
    {
        <div class="table-responsive mb-4">
            <table class="table table-bordered table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Phòng</th>
                        <th>Họ tên</th>
                        <th>SĐT</th>
                        <th>Ngày nhận</th>
                        <th>Ngày trả</th>
                        <th>Người lớn</th>
                        <th>Trẻ em</th>
                        <th>Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ChiTietPhongId</td>
                            <td>@item.HoTen</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.NgayNhan.ToString("dd/MM/yyyy")</td>
                            <td>@item.NgayTra.ToString("dd/MM/yyyy")</td>
                            <td>@item.NguoiLon</td>
                            <td>@item.TreEm</td>
                            <td class="fw-bold text-success">@string.Format("{0:N0}đ", item.TongTien)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card shadow p-4 mb-4">
            <form asp-controller="Payment" asp-action="Checkout" method="post">
                <div class="mb-3 d-flex justify-content-end align-items-end">
                    <label for="paymentMethod" class="form-label fw-semibold">Chọn phương thức thanh toán:</label>
                    <select id="paymentMethod" name="paymentMethod" class="form-select w-25">
                        <option value="Cash">Tiền mặt</option>
                        <option value="QR">Chuyển khoản (QR)</option>
                    </select>
                </div>

                <div id="qrSection" class="text-center mt-4 d-none">
                    <h5 class="mb-3 fw-bold">Quét mã QR để thanh toán</h5>
                    <img src="https://img.vietqr.io/image/970422-1111222233334444-qr_only.png"
                         class="img-fluid p-2 bg-white border rounded shadow"
                         alt="QR Thanh toán"
                         style="max-width: 300px;" />
                    <p class="mt-3 text-muted fst-italic">Vui lòng ghi rõ họ tên hoặc mã đơn hàng trong nội dung chuyển khoản.</p>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success mt-4 px-4 py-2">✅ Xác nhận thanh toán</button>
                </div>
            </form>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById("paymentMethod").addEventListener("change", function () {
            var qrSection = document.getElementById("qrSection");
            qrSection.classList.toggle("d-none", this.value !== "QR");
        });
    </script>
}
