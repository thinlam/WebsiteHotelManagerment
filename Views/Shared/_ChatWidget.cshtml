@model List<WebsiteHotelManagerment.Models.Message>

@{
    var chatWithUser = (WebsiteHotelManagerment.Models.ApplicationUser)ViewBag.ChatWithUser;
    var currentUserId = (string)ViewBag.CurrentUserId;
}

<div style="max-width: 600px; margin: 20px auto; border: 1px solid #ddd; border-radius: 8px; display: flex; flex-direction: column; height: 80vh;">
    <div style="background: #007bff; color: white; padding: 12px 16px; font-weight: bold; border-top-left-radius: 8px; border-top-right-radius: 8px;">
        Chat với: @chatWithUser.UserName
    </div>

    <div id="chatBox" style="flex: 1; overflow-y: auto; padding: 10px; font-size: 14px; background: #f5f5f5;">
        @foreach (var msg in Model)
        {
            if (msg.SenderId == currentUserId)
            {
                <div style="text-align:right; margin-bottom:10px; color:#007bff; font-weight: 600; max-width: 80%; margin-left: auto;">
                    @msg.Content<br />
                    <small style="color:gray; font-size: 11px;">@msg.Timestamp.ToString("HH:mm dd/MM/yyyy")</small>
                </div>
            }
            else
            {
                <div style="text-align:left; margin-bottom:10px; color:#333; max-width: 80%; margin-right: auto;">
                    @msg.Content<br />
                    <small style="color:gray; font-size: 11px;">@msg.Timestamp.ToString("HH:mm dd/MM/yyyy")</small>
                </div>
            }
        }
    </div>

    <form id="chatForm" style="padding: 10px; border-top: 1px solid #ddd; display: flex; gap: 8px;">
        <textarea name="content" id="content" rows="2" style="flex: 1; resize: none; border: 1px solid #ccc; border-radius: 6px; padding: 6px;" placeholder="Nhập tin nhắn..." required></textarea>
        <button type="submit" class="btn btn-primary" style="padding: 8px 16px;">Gửi</button>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            var chatBox = $('#chatBox');
            chatBox.scrollTop(chatBox[0].scrollHeight);

            $('#chatForm').submit(function (e) {
                e.preventDefault();

                var content = $('#content').val().trim();
                if (content === '') return;

                var $btn = $(this).find('button[type=submit]');
                $btn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("SendMessageToAdmin", "Chat")',
                    method: 'POST',
                    data: { content: content },
                    success: function (res) {
                        if (res.success) {
                            var msg = res.message;
                            var newMsg = `<div style="text-align:right; margin-bottom:10px; color:#007bff; font-weight:600; max-width: 80%; margin-left: auto;">
                                ${msg.content}<br />
                                <small style="color:gray; font-size: 11px;">${msg.timestamp}</small>
                            </div>`;
                            chatBox.append(newMsg);
                            chatBox.stop().animate({ scrollTop: chatBox[0].scrollHeight }, 300);
                            $('#content').val('').focus();
                        } else {
                            alert('Gửi tin nhắn thất bại: ' + (res.message || ''));
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra, vui lòng thử lại.');
                    },
                    complete: function () {
                        $btn.prop('disabled', false);
                    }
                });
            });
        });
    </script>
}
