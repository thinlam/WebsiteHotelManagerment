@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    /* Trang quên mật khẩu */
    h1 {
        color: #c0392b; /* Màu đỏ cho tiêu đề chính */
        text-align: center;
        margin-bottom: 20px;
    }

    h2 {
        color: #754c24; /* Màu nâu nhẹ cho phần mô tả */
        text-align: center;
        margin-bottom: 30px;
    }

    hr {
        border: 0;
        height: 1px;
        background: #ff758c; /* Màu đỏ cho đường ngăn cách */
        margin-bottom: 30px;
    }

    .row {
        display: flex;
        justify-content: center;
    }

    .col-md-4 {
        max-width: 500px;
        width: 100%;
        background: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        background-color: #fdf3e2; /* Nền màu sáng vàng nhạt */
    }

    .form-control {
        border-radius: 25px;
        border: 1px solid #c0392b; /* Đỏ cho đường viền input */
        box-shadow: 0 0 5px rgba(192, 57, 43, 0.5); /* Tạo hiệu ứng viền đỏ khi focus */
    }

        .form-control:focus {
            border-color: #ff5e78; /* Đỏ sáng khi focus */
            box-shadow: 0 0 8px rgba(255, 94, 120, 0.5); /* Tạo hiệu ứng sáng khi focus */
        }

    .btn-primary {
        background: #ff758c; /* Màu đỏ cho nút reset mật khẩu */
        border: none;
        border-radius: 25px;
        font-weight: bold;
        padding: 12px;
    }

        .btn-primary:hover {
            background: #ff5e78; /* Đổi sang màu đỏ sáng khi hover */
        }

    .text-danger {
        color: #c0392b; /* Màu đỏ cho thông báo lỗi */
    }

    .form-floating label {
        color: #754c24; /* Màu nâu nhẹ cho nhãn */
    }

    .form-floating {
        margin-bottom: 20px;
    }

    input {
        height: 50px; /* Tăng chiều cao input để dễ sử dụng */
    }

</style>

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
